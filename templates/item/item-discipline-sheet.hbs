<form class="{{cssClass}} flexcol" autocomplete="off">
    <header class="sheet-header item-header">
        <img class="profile-img item-header__image" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
        <div class="item-header__fields">
            <h1 class="item-header__name"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
            <h3 class="item-header__type">{{localize "TYPES.Item.discipline"}}</h3>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">Description</a>
        <a class="item" data-tab="attributes">Attributes</a>
        <a class="item" data-tab="violences">Trait &amp; Violences</a>
        <a class="item" data-tab="effects">Effects</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        <div class="tab" data-group="primary" data-tab="description">
            {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
            {{editor enriched.description target="system.description" button=true engine="prosemirror"
            editable=editable}}
        </div>

        {{!-- Attributes Tab --}}
        <div class="tab" data-group="primary" data-tab="attributes">
            {{> "systems/gubat-banwa-1-4/templates/item/tabs/discipline-attributes.hbs"}}
        </div>

        {{!-- Traits & Inflict Violences --}}
        <div class="tab" data-group="primary" data-tab="violences">
            {{> "systems/gubat-banwa-1-4/templates/item/tabs/discipline-violences.hbs"}}
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects" data-group="primary" data-tab="effects">
            {{> "systems/gubat-banwa-1-4/templates/item/tabs/item-effects.hbs"}}
        </div>
    </section>
</form>
