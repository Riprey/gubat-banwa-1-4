<div class="effects">
    {{#each effects as |section sid|}}
    <div class="effects__header js-effect-control-target" data-effect-type="{{section.type}}" data-parent-id="{{@root.actor.id}}">
        <div class="effects__title">{{localize section.label}}</div>
        <div class="effects__column effects__column--source">{{localize "GUBAT_BANWA.Effect.Source"}}</div>
        <div class="effects__column effects__column--duration">{{localize "EFFECT.TabDuration"}}</div>
        {{#if ../editable}}
        <div class="effects__controls">
            <a class="js-effect-control" data-action="create" title="{{localize 'DOCUMENT.Create' type=" Effect"}}">
                <i class="fas fa-plus"></i> {{localize "DOCUMENT.New" type="Effect"}}
            </a>
        </div>
        {{/if}}
    </div>

    <ol class="effects__list">
        {{#each section.effects as |effect|}}
        <li class="effect js-effect-control-target" data-effect-id="{{effect.id}}" data-parent-id="{{effect.parent.id}}">
            <div class="effect__name-container">
                <img src="{{effect.icon}}" class="effect__image">
                <div class="effect__name">{{effect.name}}</div>
            </div>
            <div class="effect__column effect__column--source">{{effect.sourceName}}</div>
            <div class="effect__column effect__column--duration">{{effect.duration.label}}</div>
            {{#if ../editable}}
            <div class="effect__controls">
                <button class="js-effect-control" data-action="toggle" title="{{localize 'GUBAT_BANWA.Effect.Toggle'}}"
                    type="button"><i class="fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}"></i></button>
                <button class="js-effect-control" data-action="edit" title="{{localize 'DOCUMENT.Update' type=" Effect"}}"
                    type="button"><i class="fas fa-edit"></i></button>
                <button class="js-effect-control" data-action="delete" title="{{localize 'DOCUMENT.Delete' type=" Effect"}}"
                    type="button"><i class="fas fa-trash"></i></button>
            </div>
            {{/if}}
        </li>
        {{/each}}
    </ol>
    {{/each}}
</div>
