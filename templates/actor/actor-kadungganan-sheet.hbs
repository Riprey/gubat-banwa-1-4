<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

    {{!-- Sheet Header --}}
    <header class="kadungganan-header sheet-header">

        {{!-- Name & Discipline --}}
        <div class="kadungganan-header__moniker">

            {{!-- Name --}}
            <h1 class="kadungganan-header__name"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
            </h1>

            {{!-- Discipline --}}
            <h3 class="kadungganan-header__discipline">{{localize discipline.system.label}}</h3>
        </div>

        {{!-- Legend & Tier --}}
        <div class="kadungganan-header__progress sheet-header__right">
            <h1 class="kadungganan-header__legend sheet-header__level">
                <label for="system.legend">{{localize "GUBAT_BANWA.Kadungganan.Legend"}}</label>
                <input name="system.legend" type="text" value="{{system.legend}}" placeholder="0" data-dtype="Number"
                    inputmode="numeric" pattern="[+=\-]?\d*">
            </h1>
            <h3 class="kadungganan-header__rank">{{localize system.rank}}</h3>
        </div>
    </header>


    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Sidebar --}}
        {{~> "systems/gubat-banwa-1-4/templates/actor/components/actor-sidebar.hbs"}}

        <div class="main-content">

            {{!-- Sheet Tab Navigation --}}
            <nav class="sheet-tabs tabs" data-group="primary">
                {{!-- Default tab is specified in actor-sheet.mjs --}}
                <h2 class="sheet-tabs__active js-active-tab">
                    {{localize (lookup config.kadunggananSheetTabs tabs.initial)}}
                </h2>
                <a class="item" data-tab="description" data-tooltip="{{localize "GUBAT_BANWA.Kadungganan.Tabs.Drama"}}" data-tooltip-direction="UP">
                    <i class="fas fa-masks-theater"></i>
                </a>
                <a class="item" data-tab="violence" data-tooltip="{{localize "GUBAT_BANWA.Kadungganan.Tabs.Violence"}}" data-tooltip-direction="UP">
                    <i class="fas fa-hand-fist"></i>
                </a>
                <a class="item" data-tab="techniques-liberations" data-tooltip="{{localize "GUBAT_BANWA.Kadungganan.Tabs.TechniquesAndLiberations"}}"
                    data-tooltip-direction="UP"><i class="fas fa-scroll"></i></a>
                <a class="item" data-tab="enlightenments-antings" data-tooltip="{{localize "GUBAT_BANWA.Kadungganan.Tabs.EnlightenmentsAndAntings"}}"
                    data-tooltip-direction="UP"><i class="fas fa-gem"></i></a>
                <a class="item" data-tab="effects" data-tooltip="{{localize "EFFECT.TabEffects"}}" data-tooltip-direction="UP">
                    <i class="fas fa-bolt"></i>
                </a>
            </nav>

            <section class="tab-body">

                {{!-- Drama Tab --}}
                <div class="tab drama" data-group="primary" data-tab="description">
                    {{~> "systems/gubat-banwa-1-4/templates/actor/tabs/kadungganan-drama.hbs"}}
                </div>

                {{!-- Violence Tab --}}
                <div class="tab violence" data-group="primary" data-tab="violence">
                    {{~> "systems/gubat-banwa-1-4/templates/actor/tabs/kadungganan-violence.hbs"}}
                </div>

                {{!-- Techniques and Liberations Tab --}}
                <div class="tab techniques-liberations" data-group="primary" data-tab="techniques-liberations">
                    {{~> "systems/gubat-banwa-1-4/templates/actor/components/actor-equippables.hbs"
                    titleLabel="GUBAT_BANWA.Categories.Liberations" editable=editable equippables=liberation equippableType="Liberation"
                    compendium="gubat-banwa-1-4.liberations"}}
                    {{~> "systems/gubat-banwa-1-4/templates/actor/components/actor-equippables.hbs"
                    titleLabel="GUBAT_BANWA.Categories.Techniques" editable=editable equippables=technique equippableType="Technique"
                    compendium="gubat-banwa-1-4.techniques"}}
                </div>

                {{!-- Techniques and Liberations Tab --}}
                <div class="tab techniques-liberations" data-group="primary" data-tab="enlightenments-antings">
                    {{~> "systems/gubat-banwa-1-4/templates/actor/components/actor-equippables.hbs"
                    titleLabel="GUBAT_BANWA.Categories.Enlightenments" editable=editable equippables=enlightenment equippableType="Enlightenment"
                    compendium="gubat-banwa-1-4.enlightenments"}}
                    {{~> "systems/gubat-banwa-1-4/templates/actor/components/actor-equippables.hbs"
                    titleLabel="GUBAT_BANWA.Categories.Antings" editable=editable equippables=anting equippableType="Anting"
                    compendium="gubat-banwa-1-4.antings"}}
                </div>

                {{!-- Effects Tab --}}
                <div class="tab effects" data-group="primary" data-tab="effects">
                    {{~> "systems/gubat-banwa-1-4/templates/actor/tabs/actor-effects.hbs"}}
                </div>
            </section>
        </div>
    </section>
</form>
